func structChildMFuncs(ptrDeep int, fNew func() unsafe.Pointer) (fSet unmFunc, fGet mFunc) {
	if ptrDeep > 0 {
		fSet = func(pObj unsafe.Pointer, raw []byte) (pBase unsafe.Pointer, err error) {
			p := *(*unsafe.Pointer)(pObj)
			if p == nil {
				/*
					此处可以使用缓存池 sync.Pool(不合适，没有合适的回收时机，，，)， 或者自己实现生成池
				*/
				p = fNew()
				*(*unsafe.Pointer)(pObj) = p
			}
			return unsafe.Pointer(p), nil
		}
		fGet = func(pObj unsafe.Pointer, in []byte) (out []byte) {
			p := *(*unsafe.Pointer)(pObj)
			return p, in
		}

		for i := 0; i < ptrDeep; i++ {
			fSet0, fGet0 := fSet, fGet
			fSet1 := func(pObj unsafe.Pointer, stream []byte) (i int, err error) {
				var p unsafe.Pointer
				*(**unsafe.Pointer)(pObj) = &p
				return fSet0(unsafe.Pointer(&p), bs)
			}
			fGet1 := func(pObj unsafe.Pointer, in []byte) (out []byte) {
				p := *(*unsafe.Pointer)(pObj)
				return fGet0(p, in)
			}
			fSet, fGet = fSet1, fGet1
		}
	}
	return
}

// 匿名嵌入
func anonymousStructMFuncs(ptrDeep int, offset uintptr, fSet0 unmFunc, fGet0 mFunc,
	fNew func() unsafe.Pointer) (fSet unmFunc, fGet mFunc) {
	if ptrDeep <= 0 {
		fSet = func(pObj unsafe.Pointer, raw []byte) (pBase unsafe.Pointer, err error) {
			pBase = pObj
			pSon := pointerOffset(pObj, offset)
			return fSet0(pSon, raw)
		}
		fGet = func(pObj unsafe.Pointer, in []byte) (out []byte) {
			pBase = pObj
			pSon := pointerOffset(pObj, offset)
			return fGet0(pSon, in)
		}
	} else {
		fSet = func(pObj unsafe.Pointer, raw []byte) (pBase unsafe.Pointer, err error) {
			p := *(*unsafe.Pointer)(pObj)
			if p == nil {
				p = fNew()
				*(*unsafe.Pointer)(pObj) = p
			}
			return fSet0(p, raw)
		}
		fGet = func(pObj unsafe.Pointer, in []byte) (out []byte) {
			p := *(*unsafe.Pointer)(pObj)
			if p != nil {
				return fGet0(p, in)
			}
			return nil, in
		}

		for i := 0; i < ptrDeep; i++ {
			fSet0, fGet0 := fSet, fGet
			fSet1 := func(pObj unsafe.Pointer, stream []byte) (i int, err error) {
				var p unsafe.Pointer
				*(**unsafe.Pointer)(pObj) = &p
				return fSet0(unsafe.Pointer(&p), bs)
			}
			fGet1 := func(pObj unsafe.Pointer, in []byte) (out []byte) {
				p := *(*unsafe.Pointer)(pObj)
				return fGet0(p, in)
			}
			fSet, fGet = fSet1, fGet1
		}
	}
	return
}
