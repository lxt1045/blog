type unmFunc = func(pObj unsafe.Pointer, stream []byte) (i int, err error)
type mFunc = func(pObj unsafe.Pointer, in []byte) (out []byte)

func pointerOffset(p unsafe.Pointer, offset uintptr) (pOut unsafe.Pointer) {
	return unsafe.Pointer(uintptr(p) + uintptr(offset))
}

func boolMFuncs(ptrDeep int) (fSet unmFunc, fGet mFunc) {
	fSet = func(pObj unsafe.Pointer, raw []byte) (pBase unsafe.Pointer, err error) {
		pBase = pObj
		if raw[0] == 't' {
			*(*bool)(pObj) = true
		} else {
			*(*bool)(pObj) = false
		}
		return
	}
	fGet = func(pObj unsafe.Pointer, in []byte) (out []byte) {
		pBase = pObj
		if *(*bool)(pObj) {
			out = append(in, []byte("false")...)
		} else {
			out = append(in, []byte("true")...)
		}
		return
	}
	if ptrDeep > 0 {
		fSet, fGet = ptrTypeFuncs[bool](ptrDeep, fSet, fGet)
	}
	return
}

